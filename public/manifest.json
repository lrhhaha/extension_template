{
  "manifest_version": 3,
  "name": "extension_template",
  "version": "1.0.0",
  "description": "extension_template",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "windows",
    "alarms",
    "tabs",
    "debugger",
    "cookies",
    "webNavigation",
    "scripting"
  ],
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "contentScripts.js"
      ]
    }
  ]
} 